#selection sort
def selection_sort(num):
        for i in range(len(num)):
            lowest_value_index=i
            for j in range(i+1,len(num)):
              if num[j]<num[lowest_value_index]:
                         lowest_value_index=j  
                         num[i],num[lowest_value_index]=num[lowest_value_index],num[i]
                
          
          

list=[1,2,3,4]
selection_sort(list)
print(list)

